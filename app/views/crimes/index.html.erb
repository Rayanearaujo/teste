<p id="notice"><%= notice %></p>

<h1>Listing Crimes</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Local</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Descricao</th>
      <th>Valorestimado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crimes.each do |crime| %>
      <tr>
        <td><%= crime.tipo %></td>
        <td><%= crime.local %></td>
        <td><%= crime.data %></td>
        <td><%= crime.hora %></td>
        <td><%= crime.descricao %></td>
        <td><%= crime.valorestimado %></td>
        <td><%= link_to 'Show', crime %></td>
        <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
        <td><%= link_to 'Excluir', crime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

