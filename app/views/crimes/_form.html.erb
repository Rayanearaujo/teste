<%= simple_form_for(@crime) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :tipo %>
    <%= f.association :local %>
    <%= f.input :data %>
    <%= f.input :hora %>
    <%= f.input :descricao %>
    <%= f.input :valorestimado %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
